@model IList<EmployeeSales.Models.Purchase.BasePurchaseModel>

@if (Model.Count > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Product Id
                </th>
                <th>
                    Product Name
                </th>
                <th>
                    Date Sold
                </th>
                <th>
                    Sale Price
                </th>
                <th>
                    Commission Made
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sales in Model)
            {
            <tr>
                <td>
                    <a class="ep-text-link text-dark ep-pointer" asp-controller="Purchase" asp-action="SaleView" asp-route-Id="@sales.ProductId">
                        @sales.ProductId
                    </a>
                </td>
                <td>
                    <a class="ep-text-link text-dark ep-pointer" asp-controller="Purchase" asp-action="SaleView" asp-route-Id="@sales.ProductId">
                        @sales.ProductName
                    </a>
                </td>
                <td>
                    @sales.FormattedCreatedAt
                </td>
                <td>
                    @sales.FormattedSalePrice
                </td>
                <td>
                    @sales.FormattedCommissionMade
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>This employee has not made a sale yet</h3>
}
