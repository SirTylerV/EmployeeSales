@model IList<EmployeeSales.Models.Purchase.BasePurchaseModel>

@if (Model.Count > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Product Id
                </th>
                <th>
                    Product Name
                </th>
                <th>
                    Date Sold
                </th>
                <th>
                    Sale Price
                </th>
                <th>
                    Commission Made
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sales in Model)
            {
            <tr>
                <td>
                    @sales.ProductId
                </td>
                <td>
                    @sales.ProductName
                </td>
                <td>
                    @sales.FormattedCreatedAt
                </td>
                <td>
                    @sales.FormattedSalePrice
                </td>
                <td>
                    @sales.FormattedCommissionMade
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>This employee has not made a sale yet</h3>
}
